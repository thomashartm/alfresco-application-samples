<model name="proc:model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<!-- Optional meta-data about the model -->
	<description>Procurement model</description>
	<author>Thomas Hartmann</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0"
			prefix="d" />
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<namespaces>
		<namespace uri="http://www.alfresco.com/model/procurement/1.0"
			prefix="proc" />
	</namespaces>

	<constraints>
		<constraint name="proc:status" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>New</value>
					<value>In Review</value>
					<value>Approved</value>
					<value>Rejected</value>
					<value>Complete</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="proc:lengthZeroToTen" type="LENGTH">
			<parameter name="minLength">
				<value>0</value>
			</parameter>
			<parameter name="maxLength">
				<value>10</value>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<!-- Incoming documents -->
		<type name="proc:request">
			<title>Purchase Request</title>
			<parent>cm:content</parent>
			<properties>

				<property name="proc:number">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>

				<property name="proc:isProject">
					<type>d:boolean</type>
					<default>false</default>
				</property>

				<property name="proc:costCenterId">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>

				<property name="proc:department">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>

				<property name="proc:status">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<default>New</default>
					<constraints>
						<constraint ref="proc:status" />
					</constraints>
				</property>

				<property name="proc:requiredDeliveryDate">
					<type>d:date</type>
					<mandatory>false</mandatory>
				</property>

			</properties>

			<mandatory-aspects>
				<aspect>cm:versionable</aspect>
			</mandatory-aspects>
		</type>

	</types>
	
	
	<aspects>
	   <!-- Name of the default workflow for the associated contents -->
		<aspect name="proc:processContainer">
			<title></title>
			<properties>
				<property name="proc:workflow">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>
