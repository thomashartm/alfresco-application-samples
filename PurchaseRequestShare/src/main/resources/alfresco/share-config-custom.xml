                    </field>
                    
                    <field id="proc:isProject" label="Projektbezug vorhanden?" set="meta" description="Handelt es sich um eine projektbezogene Bestellung?">
                        <control template="/org/alfresco/components/form/controls/checkbox.ftl" />
