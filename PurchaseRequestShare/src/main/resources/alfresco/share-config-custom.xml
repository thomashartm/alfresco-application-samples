<alfresco-config>


	<!-- Document Library config section -->
	<config evaluator="string-compare" condition="DocumentLibrary">
		<types>
			<type name="cm:content">
				<!-- DISABLE... this should be only done within the procurement page -->
				<subtype name="proc:request" />
			</type>
		</types>
	</config>

	<!-- Pages -->
	<config evaluator="string-compare" condition="SitePages">
		<pages>
			<page id="create-procurement-request">procreq</page>
		</pages>
	</config>

	<!-- cm:content type (creating nodes) -->
	<config evaluator="model-type" condition="proc:request">
		<forms>
			<!-- Default Create Content form -->
	        <form>
                <edit-form template="/form/templates/two-column.ftl" />
                <field-visibility>
                
                    <show id="proc:number" />
                    <show id="proc:status" />
                    
                    <show id="cm:name" />
                    <show id="cm:description" force="true" />

                    <show id="proc:number" />
                    <show id="proc:isProject" />
                    <show id="proc:costCenterId" />
                    <show id="proc:department" />
                    
                    <show id="proc:requiredDeliveryDate" />
                    
                    <show id="cm:creator" for-mode="view" />
                    <show id="cm:created" for-mode="view" />
                    <show id="cm:modifier" for-mode="view" />
                    <show id="cm:modified" for-mode="view" />
                    
                </field-visibility>

                <appearance>
                    <set id="caseinfo" appearance="panel" label="Beschaffungsantrag" />
                    <set id="details" appearance="panel" label="Detailinformation" />
                    <set id="meta" appearance="fieldset" label="Metainformation" />
                    
                    
                    <field id="proc:status" label="Status" description="Stand des Antrags." set="caseinfo">
                        <control template="/org/alfresco/components/form/controls/info.ftl" />
                    </field>
                    
                    <field id="proc:number" label="Nummer" description="Wir automatisch erzeugt." set="caseinfo">
                        <control template="/org/alfresco/components/form/controls/info.ftl" />
                    </field>
                    
                    <field id="cm:name" label="Bestellungsüberschrift" set="details" description="Bitte einen ausdrucksstarken Titel eintragen.">
                        <control template="/org/alfresco/components/form/controls/textfield.ftl" />
                    </field>
                    
                    <field id="cm:description" set="details" label="Bestellung" description="Bitte die Bestellung und die exakte Menge eintragen.">
                        <control>
                            <control-param name="rows">10</control-param>
                            <control-param name="columns">30</control-param>
                        </control>
                    </field>

                    <field id="proc:department"  label="Abteilung" set="meta">
                        <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                            <control-param name="size">25</control-param>
                            <control-param name="maxLength">25</control-param>
                        </control>
                    </field>
                    
                    <field id="proc:isProject" label="Projektbezug vorhanden?" set="meta" description="Handelt es sich um eine projektbezogene Bestellung?">
                        <control template="/org/alfresco/components/form/controls/checkbox.ftl" />
                    </field>
                    
                    <field id="proc:costCenterId"  label="Kostenstelle" set="meta">
                        <control template="/org/alfresco/components/form/controls/number.ftl" >
                            <control-param name="size">10</control-param>
                            <control-param name="maxLength">10</control-param>
                        </control>
                    </field>
                    
                    <field id="proc:requiredDeliveryDate"  label="Lieferung bis?" set="meta">
                        <control template="/org/alfresco/components/form/controls/date.ftl" />
                    </field>
                </appearance>
            </form>
		</forms>
	</config>

	<!-- Form Configuration (for existing nodes) -->
	<config evaluator="node-type" condition="proc:request">
        <forms>
            <!-- Default Create Content form -->
            <form>
                <edit-form template="/form/templates/two-column.ftl" />
